@model FoodCreateViewModel

@{
    ViewData["Title"] = "FoodCreate";
}

<h1>Yeni Tarif</h1>

<hr />
<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class=" card-body">
                <h5 class="card-title">Yeni Yemek Tarifi </h5>

                <form asp-action="create" asp-controller="food" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="All"></div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="CategoryId"></label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.categoryList">
                            <option value="">Kategoriyi Seçiniz</option>
                        </select>
                        <span class="text-danger" asp-validation-for="CategoryId"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Name"></label>
                        <input class="form-control" asp-for="Name" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Description"></label>
                        <textarea class="form-control" asp-for="Description"></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" type="number" step="0.25" class="form-control" />
                        <span class="text-danger" asp-validation-for="Price"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="PhotoFile"></label>
                        <input type="file" asp-for="PhotoFile" class="form-control" />
                    </div>


                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="IsHome">
                        <label class="form-check-label" asp-for="IsHome">

                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary mt-2">Yeni Tarif</button>
                </form>
            </div>
        </div>
        <div>
            <a asp-action="Index" asp-controller="Home">Ana Sayfaya Git</a>
        </div>
    </div>
</div>

